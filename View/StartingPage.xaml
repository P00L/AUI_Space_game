<Page x:Class="AuiSpaceGame.View.StartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuiSpaceGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartingPage"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="Roboto">

    <Grid>
        <Button x:Name="createGameButton" Content="{DynamicResource createNewGame}" HorizontalAlignment="Left" Margin="100,122,0,0" VerticalAlignment="Top" Click="createGameButton_Click"/>
        <Button x:Name="loadGameButton" Content="{DynamicResource loadGame}" HorizontalAlignment="Left" Margin="100,158,0,0" VerticalAlignment="Top" Click="loadGameButton_Click"/>
    </Grid>
</Page>
